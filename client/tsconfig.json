{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
    "include": ["src"],
    "exclude": ["node_modules"]
}